import java.util.Scanner;

public class WhileBreakContinue {

	public static void main(String[] args) {
		
            Scanner in = new Scanner(System.in);
			
			while(true) {
				System.out.println(" enter a number");
				int n = in.nextInt();
				
				if ( n != 0) {
					System.out.println(" you entered " + n);
					continue;
				}
				else {
					break;
				}	
			}
	}
}